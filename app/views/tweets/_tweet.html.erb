<% obj.each do |tweet| %>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="well well-lg">
      <div class="tweet-title">
        <%= link_to tweet.title, tweet_path(tweet) %>
      </div>
      <div class="tweet-body">
        <%= truncate(tweet.description, length: 100) %>
        <div class="tweet-meta-details">
          <small>Created by: <%= tweet.user.username if tweet.user%>,
            <%= time_ago_in_words(tweet.created_at) %> ago,
            last updated: <%= time_ago_in_words(tweet.updated_at) %> ago</small>
          </div>
        </div>
        <div class="tweet-actions">
          <%= link_to "Edit this tweet", edit_tweet_path(tweet), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this tweet", tweet_path(tweet), method: :delete,
          data: { confirm: "Are you sure you want to delete the tweet?"},
          class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
