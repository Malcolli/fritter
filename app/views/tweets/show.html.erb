<h2 align="center">Title: <%= @tweet.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @tweet.user %>
  <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li>
        <li><%= link_to gravatar_for(@tweet.user), user_path(@tweet.user) %></li>
        <li class="tweet-title">
          <%= link_to @tweet.user.username, user_path(@tweet.user) %>
        </li>
        <li><small>
          <%= pluralize(@tweet.user.tweets.count, "tweet") if @tweet.user.tweets %>
        </small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@tweet.description) %>
  <div class="tweet-actions">
    <%= link_to "Edit this tweet", edit_tweet_path(@tweet), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this tweet", tweet_path(@tweet), method: :delete,
    data: { confirm: "Are you sure you want to delete the tweet?"},
    class: "btn btn-xs btn-danger" %>
    <%= link_to "View all tweets", tweets_path, class: "btn btn-xs btn-success" %>
  </div>
</div>
